@section scripts{
    <script>
    $(document).ready(function () {
        $('#Lista_Asistencia').DataTable({
            "ajax": {
                "url": '@Url.Action("ListaAsistencia", "Home")',
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                {"data": "IdAsistencia"},
                { "data": "DUI" },
                { "data": "Nombre" },
                { "data": "fecha" },
                { "data": "HoraEntrada" },
                { "data": "HoraSalida" },
                { "data": "Rutina" }
            ],
            "language":{
                url: "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
            },
            dom:"Bfrtip",
            buttons: [
                {
                extend : "excelHtml5",
                text: "Exportar Excel",
                filename: "Lista de Empleados Comca",
                className: "btb-Excel"
                },

                {
                    extend: "pdfHtml5",
                    text: "Exportar PDF",
                    filename: "Lista de Empleados Comca",
                    orientation: 'landscape',
                    className : "btn-pdf"
                },
                "pageLength"
            ]
        });
    });

        //Tabla de Listado de empleados Scripts
         $(document).ready(function () {
        $('#tb_empleados').DataTable({
            "drawCallback": function () {
                var api = this.api();

                $(api.column(9).footer()).html(
                    api.column(9, { page: 'current' }).data().sum()
                )
            },
            "ajax": {
                "url": '@Url.Action("ListaEmpleados", "Home")',
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                {"data": "DUI"},
                { "data": "Nombre" },
                { "data": "Apellidos" },
                { "data": "Direccion" },
                { "data": "Telefono" },
                { "data": "IdTipoEmp" },
                { "data": "FechaNacimiento" },
                { "data": "Puesto" },
                { "data": "FechaContratacion" },
                { "data": "Sueldo" },

            ],
            "language":{
                url: "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
            },
            dom:"Bfrtip",
            buttons: [
                {
                    text: 'Agregar Nuevo',
                    action: function (e, dt, node, config) {
                        abrirModal(0)
                    },
                    className : "btn-nuevo"
                },
                {
                extend : "excelHtml5",
                text: "Exportar Excel",
                filename: "Lista de Empleados Comca",
                className: "btb-Excel"
                },

                {
                    extend: "pdfHtml5",
                    text: "Exportar PDF",
                    filename: "Lista de Empleados Comca",
                    orientation: 'landscape',
                    className : "btn-pdf"
                },
                {
                    extend: "print",
                    className : "btn-print"
                },
                "pageLength"
            ]
        });
    });
        function abrirModal() {
            $('#FormModal').modal('show');
        }
         //Tabla de Listado de empleados Scripts ---- FIN
    </script>
}

