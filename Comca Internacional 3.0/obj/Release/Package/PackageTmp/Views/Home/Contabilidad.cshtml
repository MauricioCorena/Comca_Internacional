@model Comca_Internacional_3._0.Models.Empleados
@{
    ViewBag.Title = "Contabilidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 bhoechie-tab-menu">
        <div class="list-group">
            <a href="#" class="list-group-item active text-center">
                <h4 class="glyphicon glyphicon-eur"></h4><br />Planilla 
            </a>
            <a href="#" class="list-group-item text-center">
                <h4 class="glyphicon glyphicon-folder-close"></h4><br />Registro de planillas
            </a>
            <a href="#" class="list-group-item text-center">
                <h4 class="glyphicon glyphicon-folder-open"></h4><br />Reportes
            </a>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bhoechie-tab">
        <!-- CONTROL DE PLANILLA -->
        <div class="bhoechie-tab-content active" style="background-color: #EDEDED;">
            <center>
                <h2 style="color:#55518a">CONTROL PLANILLA</h2>
                
                <table class="table table-striped" id="tb_Planilla" style="width: 100% ">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>DUI</th>
                            <th>Fecha inicio</th>
                            <th>Fecha corte</th>
                            <th>Sueldo</th>
                            <th>Dias </th>
                            <th>AFP</th>
                            <th>ISSS</th>
                            <th>Renta</th>
                            <th>Bono</th>
                            <th>Total Descuentos</th>
                            <th>Total Pago</th>
                            <th>Firma</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>Total:</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </center>
        </div>
        <!-- CONTROL DE EMPLEADOS  -->
        <div class="bhoechie-tab-content" style="background-color: #EDEDED;">
            <center>
                <h4 style="color:#55518a">LISTA DE EMPLEADOS</h4>
                <form method="post" action="/Home/RegistarEmple">
                    @using (Html.BeginForm())
                    {
                        <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title">Registrar Empleado</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.DUI, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.DUI, new { @class = "form-control" })
                                                    @Html.ValidationMessage("DUI", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.FechaNacimiento, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.FechaNacimiento, new { @class = "form-control", type = "date" })
                                                    @Html.ValidationMessage("FechaNacimiento", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.IdTipoEmp, new { @class = "control-label" })
                                                    @Html.DropDownListFor(modal => modal.IdTipoEmp, new List<SelectListItem>
                                                    {
                                                        new SelectListItem {Text="Activo" , Value="1"},
                                                        new SelectListItem {Text="Inactivo" , Value="2"},
                                                    }, "Selecione Estado", (new { @class = "form-control" }))
                                                    @Html.ValidationMessage("Puesto", new { @class = "text-danger" })
                                                    @Html.ValidationMessage("IdTipoEmp", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Nombre, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.Nombre, new { @class = "form-control" })
                                                    @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Apellidos, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.Apellidos, new { @class = "form-control" })
                                                    @Html.ValidationMessage("Apellidos", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Telefono, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.Telefono, new { @class = "form-control" })
                                                    @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Direccion, new { @class = "control-label" })
                                                    @Html.TextAreaFor(modal => modal.Direccion, new { @class = "form-control" })
                                                    @Html.ValidationMessage("Direccion", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.FechaContratacion, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.FechaContratacion, new { @class = "form-control", Type = "date" })
                                                    @Html.ValidationMessage("FechaContratacion", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Puesto, new { @class = "control-label" })
                                                    @Html.DropDownListFor(modal => modal.Puesto, new List<SelectListItem>
                                                    {
                                                    new SelectListItem {Text="Supervisor de Agencia" , Value="AC001"},
                                                    new SelectListItem {Text="Agente Maritimo" , Value="AC002"},
                                                    new SelectListItem {Text="Agente Terrestre" , Value="AC003"},
                                                    new SelectListItem {Text="Agente Aereo" , Value="AC004"},
                                                    new SelectListItem {Text="Supervisor de Amidministracion" , Value="Adm001"},
                                                    new SelectListItem {Text="Auxiliar Administrativo" , Value="Adm002"},
                                                    new SelectListItem {Text="Supervisor de RRHH" , Value="RH001"},
                                                    new SelectListItem {Text="Supervisor Contabilidad" , Value="CN001"},
                                                    new SelectListItem {Text="Supervisor Informatica" , Value="TI001"},
                                                    }, "Selecione Puesto", (new { @class = "form-control" }))
                                                    @Html.ValidationMessage("Puesto", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(modal => modal.Sueldo, new { @class = "control-label" })
                                                    @Html.TextBoxFor(modal => modal.Sueldo, new { @class = "form-control" })
                                                    @Html.ValidationMessage("Sueldo", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Registrar</button>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                    }

                </form>
                <table class="display" id="tb_empleados" style="width:100%;">
                    <thead>
                        <tr>
                            <th>DUI </th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Direccion</th>
                            <th>Tel</th>
                            <th>Estado</th>
                            <th>F. Nan</th>
                            <th>Puesto</th>
                            <th>F. Contra.</th>
                            <th>Sueldo</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>Total :</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </center>
        </div>

        <!-- CONTROL DE EXTRAS AL SALARIO-->
        <div class="bhoechie-tab-content" style="background-color: #EDEDED;">
            <center>
               
            </center>
        </div>
    </div>
</div>
@section scripts{
    <script>
             //Mostart el Listado de Asistencia
                $(document).ready(function () {
                    $('#tb_Planilla').DataTable({
                        "drawCallback": function () {
                            var api = this.api();

                            $(api.column(4).footer()).html(
                                api.column(4, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(5).footer()).html(
                                api.column(5, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(6).footer()).html(
                                api.column(6, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(7).footer()).html(
                                api.column(7, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(8).footer()).html(
                                api.column(8, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(9).footer()).html(
                                api.column(9, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(10).footer()).html(
                                api.column(10, { page: 'current' }).data().sum().toFixed(2)
                            )
                            $(api.column(11).footer()).html(
                                api.column(11, { page: 'current' }).data().sum().toFixed(2)
                            )
                        },
            "ajax": {
                "url": '@Url.Action("MostrarSueldo", "Home")',
                "type": "GET",
                "datatype": "json"
            },
            "responsivePriority" :0,
            "columns": [
                { "data": "Nombre" },
                { "data": "DUI" },
                { "data": "FechaInicio" },
                { "data": "FechaCorte" },
                { "data": "Sueldo" },
                { "data": "Dias" },
                { "data": "AFP" },
                { "data": "ISSS" },
                { "data": "Renta"},
                { "data": "Bono" },
                { "data": "TotalDescuento" },
                { "data": "TotalPago" },
                {"defaultContent" : "______"}
            ],
            "language":{
                url: "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
                        },
                        dom: "Bfrtip",
                        buttons: [
                            {
                                extend: "excelHtml5",
                                text: "Exportar Excel",
                                filename: "Planilla de Salario",
                                className: "btb-Excel"
                            },

                            {
                                extend: "pdfHtml5",
                                text: "Exportar PDF",
                                filename: "Planilla de Salario",
                                orientation: 'landscape',
                                className: "btn-pdf"
                            },
                            {
                                extend: "print",
                                className: "btn-print"
                            },
                            "pageLength",
                            {
                                text: 'Nueva Planilla',
                                action: function (e, dt, node, config) {
                                    AbrirModal()
                                },
                                className: "btn-nuevo"
                            },
                        ]
        });
                });
        //$(document).ready(function () {
        //    $('#FormModal').modal('toggle')
        //});
       

        function AbrirModal() {
            $('#FormModal').modal('toggle')
        }
    </script>
}

